{
  "name": "@max-ts/svelte",
  "version": "1.4.5",
  "type": "module",
  "description": "Svelte component library.",
  "author": "Tsepelev Maksim",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/components.d.ts",
      "svelte": "./dist/components.js",
      "default": "./dist/components.js"
    },
    "./package.json": "./package.json",
    "./theme": {
      "svelte": "./dist/theme.js",
      "types": "./dist/theme.d.ts",
      "default": "./dist/theme.js"
    },
    "./utils": {
      "svelte": "./dist/utils.js",
      "types": "./dist/utils.d.ts",
      "default": "./dist/utils.js"
    }
  },
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "play": "vite",
    "test": "vitest",
    "typecheck": "svelte-check --tsconfig ./tsconfig.json",
    "release": "bumpp && pnpm publish",
    "storybook": "storybook dev -p 6006",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "@internationalized/date": "^3.10.1",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-svelte": "^8.6.0",
    "svelte": "^5.46.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@changesets/cli": "^2.29.8",
    "@chromatic-com/storybook": "^5.0.0",
    "@internationalized/date": "^3.11.0",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-svelte": "^8.6.0",
    "@storybook/addon-a11y": "^10.2.6",
    "@storybook/addon-docs": "^10.2.6",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@storybook/addon-vitest": "^10.2.6",
    "@storybook/sveltekit": "^10.2.6",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tsconfig/svelte": "^5.0.7",
    "@types/node": "^25.2.0",
    "@vanilla-extract/css": "^1.18.0",
    "@vanilla-extract/rollup-plugin": "^1.5.1",
    "@vanilla-extract/vite-plugin": "^5.1.4",
    "@vitest/browser-playwright": "^4.0.18",
    "bumpp": "^10.4.1",
    "rollup-plugin-svelte": "^7.2.3",
    "storybook": "^10.2.6",
    "svelte": "^5.49.2",
    "svelte-check": "^4.3.6",
    "svelte-preprocess": "^6.0.3",
    "svelte2tsx": "^0.7.47",
    "tsdown": "0.20.3",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.18",
    "vitest-browser-svelte": "^2.0.2"
  },
  "dependencies": {
    "@lucide/svelte": "^0.563.1",
    "bits-ui": "^2.15.5"
  }
}
